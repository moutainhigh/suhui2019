<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.suhui.modules.toB.mapper.OrderPlatformAccountMapper">
    <select id="getAccountListByAreaCode" resultType="org.suhui.modules.toB.entity.OrderPlatformAccount" parameterType="map">
        select * from order_platform_account where 1=1 and account_state = 1 and del_flag = 0
        <if test="areaCode!=null and areaCode != '' ">
            and area_code = #{areaCode}
        </if>
    </select>
    <select id="getAccountByAreaCodeAndAccountNo" resultType="org.suhui.modules.toB.entity.OrderPlatformAccount" parameterType="map">
        select * from order_platform_account where 1=1 and account_state = 1 and del_flag = 0
        <if test="areaCode!=null and areaCode != '' ">
            and area_code = #{areaCode}
        </if>
        <if test="accountNo!=null and accountNo != '' ">
            and account_no = #{accountNo}
        </if>
    </select>
</mapper>